@model IEnumerable<Modelo.DAO.evento>

@{
    ViewBag.Title = "Lista";
}

<h2>Exeibição de Eventos</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Categoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cancelado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.palavra_chave)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.palavra_chave2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.limite_participantes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Local)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.data_hr_ini)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.data_hora_fim)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.evento_composto.Nome)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cancelado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.palavra_chave)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.palavra_chave2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.limite_participantes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Local)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.data_hr_ini)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.data_hora_fim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.evento_composto.Nome)
            </td>
            <td>
                @Html.ActionLink("Como chegar?", "Maps", new { @class = "btn btn-default" })|
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>

        </tr>
    }

</table>