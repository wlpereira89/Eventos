@using Microsoft.AspNet.Identity
@using Modelo.PN;
@if (pnEventos.Logado)
{
    using (Html.BeginForm("LogOff", "Home", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + Session["nomeUsuarioLogado"] + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li>@Html.ActionLink("Sair", "LogOff")</li>
    </ul>
    }
}
else
{   
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Adicionar Pessoa", "Create")</li>
        <li>@Html.ActionLink("Logar", "Login")</li>
    </ul>
}
