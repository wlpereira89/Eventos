@model Modelo.VM.vmEmail
@{
    ViewBag.Title = "Mailing";
}
<h2>@ViewBag.Title</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h4>Eviar newsleter</h4>
    <hr />
      
    <div class="form-group">
        @Html.LabelFor(m => m.Mensage, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Mensage, new { @class = "form-control" })
            @*Html.ValidationMensageFor(m => m.Mensage)*@
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Send" />
        </div>
    </div>
}